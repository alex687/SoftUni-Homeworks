@model Twitter.Web.Models.TweetModels.TweetInputModel
@using (Html.BeginForm("Add", "Tweets"))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Text, new { @class = "col-md-offset-2" })
            @Html.TextAreaFor(m => m.Text, new { @class = "form-control col-md-offset-2" })
            @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tweet" class="btn btn-default" />
        </div>
    </div>
}
